<div class="varification_container">
    {{#if response.success}}
    {{!-- <div class="success">
        Your Verification Was Successful
    </div> --}}
    <section class="success">
        <h1 class="success_header">Your Registration is Complete.</h1>
        <h3 class="success_text">Your email address is successfully verified, you can login to the system now. 
             Click <a href="{{ response.HOST_URL }}" >here</a> to login.</h3>
    </section>
    {{!-- {{ response.message }} <a >Go To Home</a> --}}
    {{else}}
    <div class="error">
        Your Verification Was Not Successful
    </div>
    {{ response.message }} <a href="{{ response.HOST_URL }}">Go To Home</a>
    {{/if}}
</div>