    <div>
        <section class="success">
            <h1 class=" error succes_header"> Your Verification Was Not Successful</h1>
            <h4 class="success_text"> {{ response.message }} <a href="{{ response.HOST_URL }}">Go To Home</a> </h4>
        </section>
    </div>
    {{/if}}
</div>